FROM node:14-alpine

ENV PY_DOLLAR_TO_SHEKEL_PORT=3000
ENV PY_EURO_TO_SHEKEL_PORT=3001
ENV JS_HANDLER_PORT=3002
ENV JS_DOLLAR_TO_SHEKEL_PORT=3003
ENV JS_EURO_TO_SHEKEL_PORT=3004
ENV JS_YEN_TO_SHEKEL_PORT=3005
ENV JS_RUPPE_TO_SHEKEL_PORT=3006
ENV JS_WAN_TO_SHEKEL_PORT=3007
ENV JS_POUND_TO_SHEKEL_PORT=3008


WORKDIR /usr/src/app

COPY JS/Conversion/dollar_to_shekel.js .
COPY *.json .

RUN npm install

EXPOSE ${JS_DOLLAR_TO_SHEKEL_PORT}

CMD ["node", "dollar_to_shekel.js"]
